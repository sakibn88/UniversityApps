@using System.Activities.Expressions
@model IEnumerable<UniversityApps.Models.Course>

@if (Model != null)
{
    <table class="table table-striped">
        <tr>
            <th>
                Course Code
            </th>
            <th>
                Course Name
            </th>
            <th>
                Semester
            </th>
            <th>
                Assigned To
            </th>

        </tr>

        @foreach (var item in Model)
        {

            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.AssigningSemester.SemisterName)
                </td>
                <td>
                    @if (item.AsssignTo != null)
                    {
                        @Html.DisplayFor(modelItem => item.AsssignTo)
                    }
                    @if (item.AsssignTo == null)
                    {
                        item.AsssignTo = "Not Assigned";
                        @Html.DisplayFor(modelItem => item.AsssignTo)
                    }
                </td>

            </tr>
        }
    </table>
}



<div style="color: darkgoldenrod"><h3>@ViewBag.NotAssigned</h3></div>
